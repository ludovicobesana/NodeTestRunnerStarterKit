{
  "name": "node-test-runner-starter-kit",
  "version": "1.0.0",
  "description": "A comprehensive boilerplate repository for Node.js Test Runner with TypeScript, ESM support, and modern testing best practices",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "node --test --experimental-test-coverage",
    "test:watch": "node --test --watch",
    "test:coverage": "node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=coverage/lcov.info",
    "test:verbose": "node --test --test-reporter=spec",
    "test:json": "node --test --test-reporter=tap --test-reporter-destination=test-results.tap",
    "test:only": "node --test --test-only",
    "test:filter": "node --test --test-name-pattern",
    "test:snapshot": "node --test --test-update-snapshots",
    "lint": "eslint src tests --ext .ts,.js",
    "lint:fix": "eslint src tests --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-results.tap",
    "clean:snapshots": "find tests -name '*.snapshot' -delete",
    "dev": "node --watch dist/index.js",
    "start": "node dist/index.js",
    "format": "prettier --write 'src/**/*.{ts,js}' 'tests/**/*.{ts,js}' '*.{json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,js}' 'tests/**/*.{ts,js}' '*.{json,md}'",
    "prepare": "npm run build",
    "ci": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "keywords": [
    "nodejs",
    "test-runner",
    "testing",
    "typescript",
    "esm",
    "boilerplate",
    "starter-kit",
    "tdd",
    "coverage",
    "mocking"
  ],
  "author": "Ludovico Besana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ludovicobesana/NodeTestRunnerStarterKit.git"
  },
  "bugs": {
    "url": "https://github.com/ludovicobesana/NodeTestRunnerStarterKit/issues"
  },
  "homepage": "https://github.com/ludovicobesana/NodeTestRunnerStarterKit#readme",
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {},
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
